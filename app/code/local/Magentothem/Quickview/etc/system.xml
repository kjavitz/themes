                            <tooltip>Specifies a overlay color. Colors should be specified in hex format, e.g. '#aa00aa'.</tooltip>
                            <frontend_type>text</frontend_type>
                            <sort_order>67</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <overlay_show>1</overlay_show>
                            </depends>
                        </overlay_color>
                    </fields>
                </settings>
                <media translate="label">
                    <label>Media Zoom alternatives</label>
                    <frontend_type>text</frontend_type>
                    <frontend_model>quickview/adminhtml_global</frontend_model>
                    <sort_order>20</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <active>
                            <frontend_type>radios</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </active>
                        <default translate="label comment">
                            <label>Default</label>
                            <comment>default or your media viewer</comment>
                            <frontend_type>radio</frontend_type>
                            <frontend_element_name>media/active</frontend_element_name>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </default>
                        <cloudzoom translate="label comment">
                            <label>Cloud-zoom</label>
                            <comment>a free jQuery image zoom plugin</comment>
                            <copyright><![CDATA[© 2010 by R Cecco]]></copyright>
                            <demo_url><![CDATA[http://www.professorcloud.com/mainsite/cloud-zoom.htm]]></demo_url>
                            <frontend_type>radio</frontend_type>
                            <frontend_element_name>media/active</frontend_element_name>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
