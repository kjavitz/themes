                        <fancybox translate="label comment">
                            <label>Fancybox</label>
                            <comment>"lightbox" jQuery tool for displaying images</comment>
                            <copyright><![CDATA[© 2010 Janis Skarnelis]]></copyright>
                            <demo_url><![CDATA[http://www.fancybox.net/]]></demo_url>
                            <frontend_type>radio</frontend_type>
                            <frontend_element_name>media/active</frontend_element_name>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </fancybox>
                    </fields>
                </media>
                <cloudzoom translate="label">
                    <label>Cloud Zoom</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>30</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <zoom_width_quickview translate="label tooltip">
                            <label>Zoom Width</label>
                            <tooltip><![CDATA[<b>in pixels</b>. 0 - 'auto'<br><br>]]>The <![CDATA[<b>width</b>]]> of the zoom window in pixels.<![CDATA[<br><br>]]>If 'auto' is specified, the width will be the same as the small image. <![CDATA[<div class='quickview_tooltip'></div>]]></tooltip>
                            <frontend_type>text</frontend_type>
                            <validate>validate-not-negative-number</validate>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </zoom_width_quickview>
                        <zoom_height_quickview translate="label tooltip">
                            <label>Zoom Height</label>
                            <tooltip><![CDATA[<b>in pixels</b>. 0 - 'auto'<br><br>]]>The <![CDATA[<b>height</b>]]> of the zoom window in pixels.<![CDATA[<br><br>]]>If 'auto' is specified, the height will be the same as the small image.</tooltip>
                            <frontend_type>text</frontend_type>
                            <validate>validate-not-negative-number</validate>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </zoom_height_quickview>
                        <position_quickview translate="label tooltip">
                            <label>Position</label>
                            <tooltip>Specifies the position of the zoom window relative to the small image.<![CDATA[<br><br>]]>Allowable values are 'left', 'right', 'top', 'bottom', 'inside' or you can specifiy the id of an html element to place the zoom window.</tooltip>
                            <frontend_type>select</frontend_type>
                            <source_model>quickview/source_media_cloudzoom_position</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </position_quickview>
                        <position_element_quickview translate="label">
                            <label>Position id of an html element</label>
                            <tooltip>id of an html element to place the zoom window.<![CDATA[<br><br>Example: element1<br>html: &lt;div id="element1"&gt;]]></tooltip>
                            <frontend_type>text</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <position_quickview separator=",">0,no,none</position_quickview>
                            </depends>
                        </position_element_quickview>
                        <show_title translate="label tooltip">
                            <label>Show Title</label>
                            <tooltip>Shows the title tag of the image.</tooltip>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_enabledisable</source_model>
                            <sort_order>190</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </show_title>
                        <title_opacity translate="label tooltip">
                            <label>Title Opacity</label>
                            <tooltip><![CDATA[Default value <b>0.5</b><br><br>]]>Specifies the opacity of the title if displayed, where 0 is fully transparent, and 1 is fully opaque.</tooltip>
                            <frontend_type>text</frontend_type>
                            <validate>validate-not-negative-number</validate>
                            <sort_order>200</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <show_title>1</show_title>
                            </depends>
                        </title_opacity>
                    </fields>
                </cloudzoom>
                <fancybox translate="label">
                    <label>Fancybox</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>50</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <padding translate="label tooltip">
                            <label>Padding</label>
                            <tooltip><![CDATA[<b>in pixels</b><br><br>Default value <b>10</b><br><br>]]>Space between FancyBox wrapper and content</tooltip>
                            <frontend_type>text</frontend_type>
                            <validate>validate-not-negative-number</validate>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </padding>
                        <margin translate="label tooltip">
                            <label>Margin</label>
                            <tooltip><![CDATA[<b>in pixels</b><br><br>Default value <b>20</b><br><br>]]>Space between viewport and FancyBox wrapper</tooltip>
                            <frontend_type>text</frontend_type>
                            <validate>validate-not-negative-number</validate>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </margin>
                        <title_show translate="label tooltip">
                            <label>Show Title</label>
                            <tooltip>Shows the title tag of the image.</tooltip>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_enabledisable</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </title_show>
                        <title_position translate="label tooltip">
                            <label>Title Position</label>
                            <tooltip>The position of title. Can be set to 'outside', 'inside' or 'over'</tooltip>
                            <frontend_type>select</frontend_type>
                            <source_model>quickview/source_media_fancybox_title</source_model>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <title_show>1</title_show>
                            </depends>
                        </title_position>
                        <transition_in translate="label tooltip">
                            <label>Transition In</label>
                            <tooltip>The transition type. Can be set to 'elastic', 'fade' or 'none'</tooltip>
                            <frontend_type>select</frontend_type>
                            <source_model>quickview/source_media_fancybox_transition</source_model>
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </transition_in>
                        <transition_in_elastic translate="label">
                            <label>Transition In Easing</label>
                            <tooltip>Easing used for elastic animations</tooltip>
                            <frontend_type>select</frontend_type>
                            <source_model>quickview/source_media_fancybox_elastic</source_model>
                            <sort_order>70</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <transition_in separator=",">elastic</transition_in>
                            </depends>
                        </transition_in_elastic>
                        <transition_out translate="label tooltip">
                            <label>Transition Out</label>
                            <tooltip>The transition type. Can be set to 'elastic', 'fade' or 'none'</tooltip>
                            <frontend_type>select</frontend_type>
                            <source_model>quickview/source_media_fancybox_transition</source_model>
                            <sort_order>80</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </transition_out>
                        <transition_out_elastic translate="label">
                            <label>Transition Out Easing</label>
                            <tooltip>Easing used for elastic animations</tooltip>
                            <frontend_type>select</frontend_type>
                            <source_model>quickview/source_media_fancybox_elastic</source_model>
                            <sort_order>90</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <transition_out separator=",">elastic</transition_out>
                            </depends>
                        </transition_out_elastic>
                        <opacity translate="label tooltip">
                            <label>Opacity Transitions</label>
                            <tooltip>When enable, transparency of content is changed for elastic transitions</tooltip>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_enabledisable</source_model>
                            <sort_order>100</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <transition_in>elastic</transition_in>
                                <transition_out>elastic</transition_out>
                            </depends>
                        </opacity>
                        <overlay_show translate="label">
                            <label>Display Overlay</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_enabledisable</source_model>
                            <sort_order>110</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </overlay_show>
                        <overlay_opacity translate="label tooltip">
                            <label>Overlay Opacity</label>
                            <tooltip><![CDATA[Default value <b>0.3</b><br><br>]]>Where 0 is fully transparent, and 1 is fully opaque.</tooltip>
                            <validate>validate-not-negative-number</validate>
                            <frontend_type>text</frontend_type>
                            <sort_order>120</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <overlay_show>1</overlay_show>
                            </depends>
                        </overlay_opacity>
                        <overlay_color translate="label tooltip">
                            <label>Color of the Overlay</label>
                            <tooltip>Specifies a overlay color. Colors should be specified in hex format, e.g. '#aa00aa'.</tooltip>
                            <frontend_type>text</frontend_type>
                            <sort_order>130</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <overlay_show>1</overlay_show>
                            </depends>
                        </overlay_color>
